#!/bin/bash

log () {
  echo -e "$@" >&2
}

usage () {
  if [ -n "$*" ]; then 
    log "$*"; 
  fi
  
  name="$(basename "$0")"

  log "Usage: $name list" 
  log "       $name status [--strip] [--no-strip]" 
  log "       $name connect [--wait] <VPN>" 
  log "       $name disconnect [VPN]" 
  log "       $name quit" 

  exit 1
}

if [ "$#" -eq 0 ]; then
  usage
fi

DIVIDER=$([[ "$TUNBLKCTL_SI_MODE" =~ ^(on|true|yes)$ ]] && echo 1000 || echo 1024)

if [ -z "$TUNBLKCTL_ROOT_PATH" ]; then
  TUNBLKCTL_ROOT_PATH="$( cd "$( dirname "$(readlink -f "${BASH_SOURCE[0]}")" )" &> /dev/null && pwd )/../"
fi

LIB_DIR="$TUNBLKCTL_ROOT_PATH/libexec"

debug () {
  while read -r IN
  do
    if [[ "$TUNBLKCTL_DEBUG" =~ ^(on|true|yes)$ ]]; then
      log "$1>> ${IN}"
    fi
  done
}

osascript () {
  /usr/bin/osascript "$LIB_DIR/$1.applescript" "${@:2}"
}

osasilent () {
  osascript "$@" 2>&1 | debug "$1"
  return "${PIPESTATUS[0]}"
}

if ! osasilent bundleid ; then
  log "Couldn't find Tunnelblick. Is it installed?"
  exit 2
fi

command="$1"
shift

case "$command" in
  list|ls)
    osascript status 2>&1 | cut -f1 | ([ -t 1 ] && column || cat)
    ;;
  status|st)
    if ! { [ -t 1 ] && [[ $* != *'--strip'* ]] \
           || [[ $* == *'--no-strip'* ]]; } then
      strip=yes
    fi
    
    header="VPN\tSTATUS\tIN\tOUT\tAUTO"

    ([ -z "$strip" ] && echo -e $header; osascript status 2>&1) \
      | ([ -z "$strip" ] \
          && awk -F '\t' -v OFS='\t' -v div="$DIVIDER" -f "$LIB_DIR/numfmt.awk" -f "$LIB_DIR/prettify.awk" \
            | column -t -s $'\t' \
          || cat) 
    ;;
  connect|con)
    if [ "$1" = '--wait' ] && [ -n "$2" ]; then
      osasilent connect "$2" && osasilent await "$2"
    elif [ "$1" != '--wait' ] && [ -n "$1" ]; then
      osasilent connect "$1"
    else
      usage "Not enough arguments." 
    fi 
    ;;
  disconnect|dis)
    if [ -n "$1" ]; then
      osasilent disconnect "$1"
    else
      osasilent disconnect-all
    fi
    ;;
  quit|q)
    osasilent quit
    ;;
  *)
    usage "Unexpected command: $command"
    ;;
esac 
